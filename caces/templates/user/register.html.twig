{% extends 'base.html.twig' %}

{% block title %}
<a href="{{path("home")}}"><i class="fas fa-arrow-left text-white"></i></a>
Inscription
{% endblock %}

{% block color %}user-color{% endblock %}

{% block content %}

    {{ form_start(userForm) }}

    <div class="">
        <div class="row mt-2">
            <div class="col-6">{{ form_label(userForm.firstName) }}</div > 
            <div class="col-6"> {{ form_label(userForm.lastName) }}</div>
        </div>
        <div class="row">
            <div class="col-6 text-danger">{{ form_errors(userForm.firstName) }}</div>
            <div class="col-6 text-danger">{{ form_errors(userForm.lastName) }}</div> 

            
        </div>
        <div class="row">
            <div class="col-6">{{ form_widget(userForm.firstName) }}</div>
            <div class="col-6">{{ form_widget(userForm.lastName) }}</div> 
        </div>


        <div class="row mt-2">
            <div class="col-6">{{ form_label(userForm.email) }}</div>
        </div>
        <div class="row">
            <div class="col-6 text-danger">{{ form_errors(userForm.email) }}</div>
        </div>
        <div class="row">
            <div class="col-6">{{ form_widget(userForm.email) }}</div>
        </div>

{% if not(is_granted('IS_AUTHENTICATED_FULLY')) %}

        <div class="row mt-2">
            <div class="col-6">{{ form_label(userForm.password.first) }}</div>
            <div class="col-6">{{ form_label(userForm.password.second) }}</div> 
        </div>
        <div class="row">
            <div class="col-6 text-danger">{{ form_errors(userForm.password.first) }}</div>
            <div class="col-6 text-danger">{{ form_errors(userForm.password.second) }}</div> 
        </div>
        <div class="row">
            <div class="col-6">{{ form_widget(userForm.password.first) }}</div>
            <div class="col-6">{{ form_widget(userForm.password.second) }}</div> 
        </div>
{% endif %}

        <div class="row mt-2">
            <div class="col-12">{{ form_label(userForm.question) }}</div>
        </div>
        <div class="row">
            <div class="col-12">{{ form_widget(userForm.question) }}</div>
        </div>


        <div class="row">
            <div class="col-12 d-flex justify-content-center mt-4 text-center">
                {{form_row(userForm.submit)}}
            </div>
        </div>
    </div>
                
        {{ form_end(userForm) }}

        


{% endblock %}
